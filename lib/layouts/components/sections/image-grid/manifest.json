{
  "name": "image-grid",
  "type": "section",
  "styles": ["image-grid.css"],
  "scripts": ["image-grid.js"],
  "requires": ["commons", "text", "icon"],
  "validation": {
    "required": ["sectionType", "dataSource"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "image-grid"
      },
      "isDisabled": {
        "type": "boolean"
      },
      "hasCenteredContent": {
        "type": "boolean"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "containerFields.noMargin.top": {
        "type": "boolean"
      },
      "containerFields.noMargin.bottom": {
        "type": "boolean"
      },
      "containerFields.noPadding.top": {
        "type": "boolean"
      },
      "containerFields.noPadding.bottom": {
        "type": "boolean"
      },
      "containerFields.background.isDark": {
        "type": "boolean"
      },
      "text": {
        "type": "object"
      },
      "dataSource": {
        "type": "string"
      },
      "settings.gap": {
        "type": "string"
      },
      "settings.targetRowHeight": {
        "type": "string"
      }
    }
  }
}
