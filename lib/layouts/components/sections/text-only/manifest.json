{
  "name": "text-only",
  "type": "section",
  "styles": ["text-only.css"],
  "scripts": [],
  "requires": ["ctas", "text", "commons"],
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "text-only"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "text.titleTag": {
        "type": "string",
        "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
        "default": "h2"
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            },
            "isSmall": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
